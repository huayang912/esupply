<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
 	<class name="com.LocalSystem.Entity.MasterData.AppUser, com.LocalSystem.Entity" table="AppUser" lazy="false">
		<id name="Code" column="Code" type="String" unsaved-value="null" >
      		<generator class="assigned" />
        </id>
		<property name="Address" column="Address" type="String" length="150" />	
		<property name="Email" column="Email" type="String" length="255" />	
		<property name="FirstName" column="FirstName" type="String" length="50" />	
		<property name="LastName" column="LastName" type="String" length="50" />	
		<property name="Password" column="Password" type="String" length="255" />	
		<property name="Phone" column="Phone" type="String" length="255" />	
		<property name="Fax" column="Fax" type="String" length="255" />
    <property name="Language" column="Language" type="String" length="50" />
		<property name="IsActive" column="IsActive" type="Boolean"  />
    <bag name="AppUserPermissions" table="AppUserPermission" inverse="true" lazy="true">
      <key column="AppUser" />
      <one-to-many class="com.LocalSystem.Entity.MasterData.AppUserPermission, com.LocalSystem.Entity" />
    </bag>
  	</class>
</hibernate-mapping>
